generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  pet    Pet[]
}

model Pet {
  id                Int     @id @default(autoincrement())
  user              User?   @relation(fields: [userId], references: [id])
  userId            Int
  pet_type          String
  pet_breed         String
  pet_colour        String
  pet_gender        String?
  pet_age           Int?
  pet_description   String
  pet_location      String
  latitude          Float?
  longtitude        Float?
  pet_status        String
  pet_image_url     String @unique
  creation_date     DateTime  @default(now())
}
